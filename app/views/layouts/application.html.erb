<!DOCTYPE html>
<html>
  <head>
    <title>RentalLocalCook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <a class="navbar-brand" href="#">
        <%= image_tag "plate_image.jpg" %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto align-items-center">
          <li class="nav-item active">
            <%= link_to("Home", root_path, class: 'nav-link mx-2') %>
          </li>
          <li class="nav-item">
            <%= link_to("About", root_path, class: 'nav-link mx-2') %>
          </li>
          <% if current_user.nil? %>
            <%= link_to("Log in", new_user_session_path, class: 'btn btn-green') %>
          <% else %>
            <li class="nav-item dropdown text-center">
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to('Profile', edit_user_registration_path, class: "dropdown-item") %>
                <a class="dropdown-item" href="#">My Cook</a>
                <%= link_to('Log out', destroy_user_session_path, :method => 'delete', class: "dropdown-item") %>
              </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
