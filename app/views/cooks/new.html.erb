<div class="container">
<div class="container p-5 user-form">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2 class="text-center">Create your cook profile</h2>
    </div>

    <div class="col-6">
    <%= simple_form_for [@cook] do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :location %>
        <%= f.input :service, as: :text%>
        <%= f.input :price%>
        <%= f.input :photo, as: :file%>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Create", class: 'btn btn-red' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>
