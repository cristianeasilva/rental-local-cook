<div class="container">
  <div class="container p-5 user-form">
    <div class="row justify-content-center">
      <div class="col-12">
        <h2 class="text-center">Update your cook profile</h2>
      </div>

      <div class="col-6">
      <%= simple_form_for [@cook] do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :service, as: :text%>
          <%= f.input :price%>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </div>
        <div class="form-actions d-flex justify-content-between">
          <%= f.button :submit, "Update", class: 'btn btn-green' %>
          <div>
          <%= link_to "Remove", cook_path(@cook), method: :delete, class: 'btn btn-red' %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
