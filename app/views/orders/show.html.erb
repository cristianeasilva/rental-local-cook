<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 m-5 shadow rounded p-0 bg-white text-center">
      <p class="m-3 text-left">
        <%= @order.user.first_name %> <%= @order.user.last_name %>
      </p>
      <h2 class="m-0 p-3 text-light bg-green">Thank you for your order</h2>
      <div class="d-flex flex-column flex-md-row justify-content-between">
        <div class="text-left m-3">
          <p>
            <strong>Cook: </strong>
            <%= @order.cook.name %>
          </p>
          <p>
            <strong>Service:</strong>
            <%= @order.cook.service %>
          </p>
          <p>
            <strong>Booking date:</strong>
            <%= @order.date.strftime("%d/%m/%Y") %>
          </p>
          <p>
            <strong>$: </strong>
            <%= @order.cook.price %>
          </p>
        </div>
        <%= image_tag "cook.svg", class: "m-3" %>
      </div>
      <p>you will be redirected to our secure payments platform</p>
    </div>
  </div>
</div>
