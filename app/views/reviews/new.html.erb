<div class="container">
<div class="container p-5 user-form">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2 class="text-center">Review your order</h2>
    </div>

    <div class="col-6">
    <%= simple_form_for [@order, @review] do |f| %>
      <div class="form-inputs">
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", id: "review_rating" %>
        <%= f.input :content, as: :text %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Review", class: 'btn btn-red' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>
